<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddParent"
    android:orientation="vertical"
    android:background="@drawable/bg3">
    <TextView
        android:id="@+id/Title"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:text="ADD NEW USER"
        android:textSize="35dp"
        android:textStyle="bold|italic"
        android:fontFamily="sans-serif-condensed"
        android:layout_gravity="center"/>
    <EditText

        android:layout_marginTop="60dp"
        android:id="@+id/txtPName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:ems="10"
        android:hint="Parent Name"
        android:textColor="#E2E2E2"
        android:textColorHint="#999999" />


    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/txtPChild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:ems="10"
        android:hint="Child Name"
        android:textColor="#E2E2E2"
        android:textColorHint="#999999" />


    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/txtPEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:ems="10"
        android:hint="Parent Email Address"
        android:inputType="textEmailAddress"
        android:textColor="#E2E2E2"
        android:textColorHint="#999999" />

    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/txtPCPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:textColor="#E2E2E2"
        android:textColorHint="#999999" />

    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/txtPPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:ems="10"
        android:hint="Parent Password"
        android:textColor="#E2E2E2"
        android:textColorHint="#999999" />
    <Button

        android:layout_marginHorizontal="90dp"
        android:id="@+id/btnLogin"
        android:layout_marginTop="15dp"
        android:background="@drawable/custombutton"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:text="Create New User" />


</LinearLayout>